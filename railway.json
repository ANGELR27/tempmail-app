{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --production && cd client && npm install && npm run build && cd .."
  },
  "deploy": {
    "startCommand": "NODE_ENV=production node server/index-mailtm.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
