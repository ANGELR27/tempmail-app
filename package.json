{
  "name": "tempmail-app",
  "version": "1.0.0",
  "description": "Aplicación de correo electrónico temporal con servidor SMTP propio",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "keywords": ["tempmail", "smtp", "email", "temporal"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "smtp-server": "^3.13.0",
    "mailparser": "^3.6.5",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "redis": "^4.6.11"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
