{
  "name": "tempmail-app",
  "version": "1.0.0",
  "description": "Aplicación de correo electrónico temporal con servidor SMTP propio",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm install && npm run build",
    "validate": "node scripts/validate-html.js",
    "fix": "node scripts/auto-fix.js",
    "check-deploy": "node scripts/check-deployment.js",
    "pre-deploy": "npm run fix && npm run validate"
  },
  "keywords": [
    "tempmail",
    "smtp",
    "email",
    "temporal"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mailparser": "^3.6.5",
    "redis": "^4.6.11",
    "smtp-server": "^3.13.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
